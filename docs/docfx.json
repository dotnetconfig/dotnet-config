{
  "$schema": "http://json.schemastore.org/docfx",
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.cs" ],
          "src": "../src/Config"
        },
        {
          "files": [ "*.cs" ],
          "src": "../src/Configuration"
        },
        {
          "files": [ "*.cs" ],
          "src": "../src/CommandLine"
        }
      ],
      "dest": "docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "*.yml",
          "index.md"
        ], 
        "src": "api",
        "dest": "api"
      },
      {
        "files": [
          "*.yml",
          "*.md"
        ], 
        "src": "who",
        "dest": "who"
      },
      {
        "files": [
          "*.md",
          "toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "logo.svg",
          "favicon.ico",
          "styles/*.css",
          "styles/*.js"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": ".netconfig",
      "_enableSearch": true
    },
    "template": [
      "default",
      "./template"
    ],    
    "dest": "_site"
  }
}
